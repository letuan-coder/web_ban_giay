@model buoi5.Models.Loaihanghoa

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Loại hàng hóa</h4>
<hr />
<p>
    <a asp-action="Index" class="btn btn-primary">Quay lại </a>
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="suaLHH">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Maloai" class="control-label"></label>
                <input asp-for="Maloai" readonly="readonly" class="form-control" />
                <span asp-validation-for="Maloai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenloai" class="control-label"></label>
                <input asp-for="Tenloai" class="form-control" />
                <span asp-validation-for="Tenloai" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



