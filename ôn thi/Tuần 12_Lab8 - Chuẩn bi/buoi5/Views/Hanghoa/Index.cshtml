@model IEnumerable<buoi5.Models.Hanghoa>
@{
    ViewBag.Title = "Quản lý hàng hóa";
    //Layout = "~/Views/_LayoutPage1.cshtml";
} <h2>Quản lý hàng hóa</h2>
<p>
        @Html.ActionLink("Thêm hàng hóa", "formThemHH")
</p>
<table class="table">
    <tr>
        <th>
                @Html.DisplayNameFor(model => model.Mahang)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.Tenhang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Donvitinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dongia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaloaiNavigation.Tenloai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MansxNavigation.Tennsx)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mahang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tenhang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Donvitinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dongia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaloaiNavigation.Tenloai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MansxNavigation.Tennsx)
            </td>
            <td>
                <a asp-controller="Hanghoa" asp-action="formXoaHH" asp-route-id="@item.Mahang" >Xóa |</a>
                <a asp-controller="Hanghoa" asp-action="chiTietHanghoa" asp-route-id="@item.Mahang">chi tiết |</a>
                <a asp-controller="Hanghoa" asp-action="formsuaHH" asp-route-id="@item.Mahang" >Chỉnh Sửa  </a>
            </td>
        </tr>
    }
    </table>
