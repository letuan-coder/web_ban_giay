@model buoi5.Models.Khachhang

<html>
<head>
    <meta name="viewport" content="width=device-width" />
        <!-- Latest compiled and minified CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    @{ 
        List<SelectListItem> ls = new List<SelectListItem>();
        ls.Add(new SelectListItem("Nam", "true"));
        ls.Add(new SelectListItem("Nữ", "false"));
    }
    <div class="container">
        <form asp-action="sua" method="post">
            <div class="form-horizontal">
                <h2>Sửa thông tin khách hàng</h2>
                @{
                    Nhasanxuat n = ViewBag.nsx;
                }
                <div class="form-group">
                    <input asp-for="Makh" type="hidden" /><br />
                </div>
                <div class="form-group">
                    <label asp-for="Tenkh" class="form-label"></label>
                    <input asp-for="Tenkh" class="form-control" />
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Namsinh" class="form-label"></label>
                    <input asp-for="Namsinh" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Phai" class="form-label"></label>
                    <select asp-for="Phai" asp-items="@ls" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Diachi" class="form-label"></label>
                    <input asp-for="Diachi" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Dienthoai" class="form-label"></label>
                    <input asp-for="Dienthoai" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Lưu" />
                </div>
                <br />
                <div>
                    @*<a href="@Url.Action("Index")">Quay lại</a>*@
                    <a asp-action="Index">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>