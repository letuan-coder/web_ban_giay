@model buoi5.Models.Nhanvien

@{
  
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if ((int)ViewBag.flag == 0)
{
    <h3>Bạn thật sự có muốn xóa nhân viên này không ?</h3>
}
else
{
    <h3>Bạn không thể xóa nhân viên này không ?</h3>
}
<p>
<a asp-action="Index" class="btn btn-primary">Quay lại </a>
</p>
<div>
    <h4>Nhân viên</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Manv)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Manv)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tennv)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tennv)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ngaysinh)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ngaysinh)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Phai)
        </dt>
        <dd>
            @*@Html.DisplayFor(model => model.Phai)*@
            @{
                if (Model.Phai == true)
                {
                    <span>Nam</span>
                }
                else
                {
                    <span>Nữ</span>
                }
            }

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Diachi)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Diachi)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>

    @if ((int)ViewBag.flag == 0)
    {
        <form asp-action="xoaNV" asp-route-id="@Model.Manv">
            <input type="submit" value="Xóa" class="btn btn-danger" /> 

        </form>
    }
</div>
